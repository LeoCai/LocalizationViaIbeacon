<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.leocai.beaconlocalization.chart.ChartActivity">

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.github.mikephil.charting.charts.LineChart"
        android:id="@+id/chartview"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/b0"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/b1"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:id="@+id/b2"
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/b3"
                android:layout_weight="1"
                android:layout_margin="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/b4"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/b5"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:id="@+id/b6"
                android:text="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/b7"
                android:layout_weight="1"
                android:layout_margin="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/b8"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/b9"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:id="@+id/b10"
                android:text="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="11"
                android:id="@+id/b11"
                android:layout_weight="1"
                android:layout_margin="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12"
                android:id="@+id/b12"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:id="@+id/b13"
                android:text="13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="14"
                android:id="@+id/b14"
                android:layout_weight="1"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="15"
                android:id="@+id/b15"
                android:layout_weight="1"
                android:layout_margin="1dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
